
 <div class="cards-container">
   <div class="row">
      <%  @farms.each do |farm| %>
     <div class="col-xs-3 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path farm.photo, height: 300, width: 400, crop: :fill %>');">
         <div class="card-category"><%= farm.description %>
         </div>
          <div class="card-description">
          <h2><%=farm.name%></h2>
          <p>$<%=farm.price%>per night</p>
          </div>
             <img class="card-user" src="https://kitt.lewagon.cplaceholder/users/tgenaitay">
          <%= link_to "Explore", farm_path(farm) %>
      </div>
    </div>
       <% end %>
   </div>
 </div>
