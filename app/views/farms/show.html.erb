
<%= render 'components/show-banner'%>

<div class="container">


  <div class="row">
    <div class="col-xs-12">
     <h4><%= @farm.name %><%= image_tag('avatar-placeholder.png', class: "avatar-large")%></h4>
     <p> <%= @farm.address %> <%= @farm.country %></p>
   </div>
 </div>

 <div class="row">
  <div class="col-md-8">

    <div class="container">
    <p>Description</p>
    <p><%= @farm.description %></p>
    </div>
  </div>


  <div class="col-md-4">
    <h3> Book now ! </h3>
    <p>Price per night : <%= @farm.price %> USD</p>
    <p>Avergage rating :
      <% if @farm.reviews.count != 0 %>
      <% @farm.average_rating.times do %>
      <i class="far fa-star"></i>
      <% end %>
      <% else %>
      no rating yet
      <% end %>
    </p>
    <%= render 'bookings/form' %>
  </div>
</div>
</div>


