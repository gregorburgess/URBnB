<div class="modal-dialog">
  <div class="modal-content">
      <%= simple_form_for @booking,  as: :booking, url: booking_path(@booking), method: :patch do |f| %>
        <div class="modal-header">
         <button type="button" class="close btn-close" data-dismiss="modal" aria-hidden="true" id="btn-close">&times;</button>
         <h4 class="modal-title">Your trip's review</h4>
        </div>
        <div class="modal-body">
          <div class="form group">
            <%= f.input :rating, label: 'Your rating'%>
          </div>
          <div class="form-group">
            <%= f.input :review, label: 'Your review' %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.button :submit, "OK", class:"btn btn-primary btn-ok"%>
        </div>
    <%end%>
  </div>
</div>




