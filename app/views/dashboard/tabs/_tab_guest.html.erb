<div class="bookings">
  <% @booking_guest.each do |booking| %>

  <div class="booking">
    <%= image_tag('farm-placeholder.jpeg', class: "img-small") %>
    <div class="booking-body">
      <p><strong><%= "Booking from #{booking.start_date} to #{booking.end_date}"%></strong></p>
      <p><%= "#{booking.farm.name} (#{booking.farm.location}, #{booking.farm.country}) " %></p>
    </div>
    <div class="booking-status">
      <%status_erb = booking.status%>

      <p class="<%= "status #{status_erb.downcase}" %>"><%= status_erb %></p>
      <p class="price"><%= booking.total_price %> USD</p>
    </div>
    <div class="booking-review">

      <p class="review-rating">
        <% booking.rating.times do %>
        <i class="far fa-star"></i>
        <% end %>
      </p>

      <button class="btn btn-primary" data-toggle="modal" data-target= <%= "#largeModal#{booking.id}"%>>Add/Edit Review</button>
    </div>

  </div>


  <!-- Large modal -->

  <div id=<%= "largeModal#{booking.id}"%> class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog">
    <%= render 'dashboard/tabs/form', booking: booking %>
  </div>

  <% end %>
</div>
