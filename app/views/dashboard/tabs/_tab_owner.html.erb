

<div class="bookings">
  <% @booking_owner.each do |booking| %>

  <div class="booking">
    <%= image_tag('avatar-placeholder.png', class: "avatar-large") %>
    <div class="booking-name">
      <h3><%=  booking.user.email%></h3>
    </div>
    <div class="booking-body">
      <p><strong><%= "Booking from #{booking.start_date} to #{booking.end_date}"%></strong></p>
      <p><%= "#{booking.farm.name} (#{booking.farm.location}, #{booking.farm.country}) " %></p>
    </div>

    <div class="booking-status">
      <p class="status pending">Pending</p>
      <p class="price"><%= booking.total_price %> USD</p>
    </div>
     <div class="booking-review">
      <p class="review-link">Manage the booking</p>
    </div>
  </div>

  <% end %>

</div>
