

<div class="bookings">
  <% @booking_owner.each do |booking| %>

  <div class="booking" id=<%= "booking#{booking.id}"%>>
    <%= image_tag('avatar-placeholder.png', class: "avatar-large") %>
    <div class="booking-name">
      <h3><%=  booking.user.email%></h3>
    </div>
    <div class="booking-body">
      <p><strong><%= "Booking from #{booking.start_date} to #{booking.end_date}"%></strong></p>
      <p><%= "#{booking.farm.name} (#{booking.farm.location}, #{booking.farm.country}) " %></p>
    </div>

    <div class="booking-status">
     <%status_erb = booking.status%>

     <p class="<%= "status #{status_erb.downcase}" %>"><%= status_erb %></p>

     <p class="price"><%= booking.total_price %> USD</p>
   </div>
   <div class="booking-review">


     <% if booking.status == "Pending"  %>
     <% @booking = booking %>
     <%= link_to "Approved", dashboard_approve_path(booking.id), method: :patch, remote: true, class: "btn btn-primary" %>
     <%= button_to "Declined", "/dashboard/declined/#{booking.id}", method: :patch, remote: true, class: "btn btn-primary" %>
     <% end %>
   </div>
 </div>

 <% end %>

</div>
